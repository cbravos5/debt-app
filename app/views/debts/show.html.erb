<h1 class="mt-3 display-5 text-capitalize text-light"><%= @debt.title %></h1>
<hr class="my-3 bg-secondary">
<div class="d-flex justify-content-center text-light align-items-center">
  <h3 class="pr-3 font-weight-lighter">Value:</h3>
  <h1 class="display-5 box px-2 <%= @debt.value > 0 ? 'green-box' : 'red-box' %>"><%= @debt.value %></h1>
</div>
<hr class="my-3 bg-secondary w-50 mx-auto">
<div class="d-flex justify-content-center text-light align-items-center">
  <h4 class="pr-3 font-weight-lighter">Last Update:</h4>
  <h3 class="box bg-secondary px-2"><%= @debt.updated_at.strftime("%d/%m/%Y") %></h3>
</div>
<hr class="my-3 bg-secondary w-50 mx-auto">
<% if !@debt.nil? %>
  <div class="text-light">
    <h3 class="font-weight-lighter">Description</h3>
    <h5 class="box bg-secondary w-75 mx-auto"><%= @debt.descp %></h5>
    <hr class="my-3 my-2 bg-secondary w-50 mx-auto">
  </div>
<% end %>
<div class="btn-group w-50 mx-auto my-3" role="group">
  <%= link_to 'Edit', edit_debt_path(@debt), class: 'text-dark btn btn-light' %>
  <%= link_to 'Back', debts_path, class: 'text-dark btn btn-light' %>   
</div>
</div>