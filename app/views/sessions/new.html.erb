<h1 class="mb-3 text-light">Login</h1>
<%= form_tag '/login', class: 'mb-3 w-50 mx-auto text-light' do %>
    <p id="error"><%= error %></p>
    <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil,  required: true, class: 'form-control'%>
    </div>
    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true , class: 'form-control'%>
    </div>
    <%= submit_tag "Login", class: 'w-50 btn btn-light'%>
<% end %>
    <%= link_to 'Back', welcome_path, class: 'w-25 mb-3 mx-auto text-dark btn btn-light' %> 