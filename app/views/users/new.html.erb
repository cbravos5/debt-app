<h1 class="mb-5 pb-1 text-light">Sign Up</h1>
<%= form_with model: @user, class: "mb-3 text-light w-50 mx-auto" do |form| %>
        <% if @user.errors.any? %>
            <div class="text-center text-dark alert alert-danger">
                <% @user.errors.each do |error| %>
                    <p><strong><%= error.full_message %></strong></p>
                <% end %>
            </div>
        <% end %>

    <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', required: true%>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'w-100 form-control, required: true'%>
    </div>
    <%= form.submit class: "w-50 btn btn-light" %>
<% end %>
    <%= link_to 'Back', welcome_path, class: 'w-25 mb-3 mx-auto text-dark btn btn-light' %> 

